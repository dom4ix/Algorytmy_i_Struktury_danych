#include <stdio.h>
#include <math.h>

int main(void) {

  float a,x;
  float x0,xn,hx=0;
  float n;
  
  printf("\nWprowadz a,x0,xn\n");
  scanf("%f %f %f",&a,&x0,&xn);
  while(hx<=0){
    printf("\nWprowadz dodatnia liczba hx\n");
    scanf("%.2f", &hx);
  }
  
  while(x<=xn){
    printf("\n%.1f = %.1f * %.1f ^ %.1f\n",(a+x*x),a,x);
    x=x+hx;

  } 
  //return 0;
}
